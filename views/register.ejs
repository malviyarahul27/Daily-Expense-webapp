<%-include ("./partials/header")%>
  <div class="registermain w-full h-full flex justify-center items-center">
    <div class="backdrop-blur-md bg-black/15 p-8 rounded-lg shadow-md w-full max-w-sm">
      <h2 class="text-2xl font-semibold mb-6 text-center text-white">Register</h2>

      <form action="/user/register" method="POST">
        <div class="mb-4">
          <label for="username" class="block text-white font-medium mb-1">Username</label>
          <input type="text" id="username" name="username"
            class="w-full px-3 py-2 border border-gray-300 bg-transparent text-white rounded-md" />
        </div>

        <!-- Email Field -->
        <div class="mb-4">
          <label for="email" class="block text-white font-medium mb-1">Email</label>
          <input type="email" id="email" name="email"
            class="w-full px-3 py-2 border border-gray-300 bg-transparent rounded-md text-white" />
        </div>

        <!-- Password Field -->
        <div class="mb-4">
          <label for="password" class="block text-white font-medium mb-1">Password</label>
          <input type="password" id="password" name="password"
            class="w-full px-3 py-2 border border-gray-300 bg-transparent rounded-md text-white" />
        </div>

        <!-- Submit Button -->
        <div>
          <button type="submit"
            class="w-full bg-blue-500 text-white py-2 px-4 rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
            Register
          </button>
          <p class="mt-2 w-full text-center text-white">
            New here -
            <a class="text-white hover:text-red-600" href="/user/login">login</a>
          </p>
        </div>
      </form>
    </div>
  </div>

  <%-include ("./partials/footer")%>