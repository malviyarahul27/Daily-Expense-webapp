<%- include("./partials/header")%>
<div class="dailyCreateContainer w-full h-full bg-black flex justify-center">
  <div class="Dform w-1/2 h-2/3 mt-20 backdrop-blur-lg bg-black/20 rounded-lg">
    <h2 class="text-center mt-5 text-xl font-semibold text-white underline">
      Update Daily Expenses
    </h2>

    <form
      class="w-full h-full px-16 mt-5"
      method="post"
      action="/expense/update/<%=expense._id%>"
    >
      <div class="mb-5 flex w-full justify-between bg-red-60">
        <div class="w-[48%]">
          <label
            for="title"
            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Title</label
          >
          <input
            type="text"
            name="title"
            id="title"
            class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg"
            value="<%=expense.title%>"
          />
        </div>
        <div class="w-[48%]">
          <label
            for="amount"
            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
            >Amount</label
          >
          <input
            type="number"
            name="amount"
            id="amount"
            class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg"
            value="<%=expense.amount%>"
          />
        </div>
      </div>
      <div class="mb-5">
        <div class="mb-5 flex w-full justify-between bg-red-60">
          <div class="w-[48%]">
            <label
              for="paymentMode"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
              >Payment Mode</label
            >
            <input
              type="text"
              name="paymentMode"
              id="paymentMode"
              class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg"
              value="<%=expense.paymentMode%>"
            />
          </div>
          <div class="w-[48%]">
            <label
              for="category"
              class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
              >Category</label
            >
            <input
              type="text"
              name="category"
              id="category"
              class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg"
              value="<%=expense.category%>"
            />
          </div>
        </div>
      </div>

      <div class="mt-3">
        <label
          for="remark"
          class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
          >Remark</label
        >
        <textarea
          class="block w-full text-gray-900 border border-gray-300 rounded-lg"
          name="remark"
          id="remark"
          cols="83"
          rows="4"
        >
        <%=expense.remark%></textarea
        >
      </div>
      <div class="w-full flex justify-evenly px-28 text-white">
        <button
          class="border-2 text-lg font-semibold p-1 rounded-lg mt-5 border-white"
        >
          Update Expense
        </button>
        <!-- <button class="border-2 text-lg font-semibold p-1 rounded-lg mt-5 border-white"><a href="/expense/daily/show">Show Expense</a></button> -->
      </div>
    </form>
  </div>
</div>

<%- include("./partials/footer")%>
